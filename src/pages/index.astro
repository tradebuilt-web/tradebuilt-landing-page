---
import Layout from "~/layouts/Layout.astro";
import houseImageSrc from "~/assets/images/home_bg.jpg";
import { Image } from "astro:assets";
import { content } from "~/data/content";
import ContactForm from "~/components/ContactForm.astro";
---

<Layout pageTitle="Home">
  <section class="relative min-h-screen flex items-center py-16 lg:py-0 px-4">
    <Image
      src={houseImageSrc}
      alt="Heading background"
      class="absolute inset-0 h-full w-full object-cover"
      priority
    />

    <div
      class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/70 to-black/90"
    >
    </div>

    <div class="relative z-10 mx-auto w-full max-w-7xl px-0 sm:px-6 lg:px-12">
      <div
        class="grid gap-12 place-items-center text-center
           lg:grid-cols-2 lg:gap-16 lg:place-items-start lg:text-left"
      >
        <!-- Hero -->
        <div class="max-w-xl">
          <h1 class="text-4xl font-extrabold leading-tight lg:text-7xl">
            You serve your customers.
            <span
              class="block mt-2 text-theme_accents underline decoration-theme_accents/60 decoration-4 underline-offset-8"
            >
              We bring them to you.
            </span>
          </h1>

          <p class="mt-8 text-lg text-gray-200">
            {content.pages[0].subHero}
          </p>
        </div>

        <!-- Form -->
        <div
          class="w-full max-w-md rounded-2xl bg-gray-200 p-6 shadow-2xl
         text-theme_text_dark text-left
         mx-4 sm:mx-auto"
        >
          <ContactForm />
        </div>
      </div>
    </div>
  </section>
</Layout>
