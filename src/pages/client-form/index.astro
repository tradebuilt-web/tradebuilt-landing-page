---
import "@/styles/global.css";
import AddressLookup from "@/components/AddressLookup.astro";
import PhotoUpload from "@/components/PhotoUpload.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>TradeBuilt Company Intake</title>
  </head>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("company-form") as HTMLFormElement;

      if (!form) return;

      function printFormData(e: SubmitEvent) {
        e.preventDefault();

        console.log("submit event fired");

        const formData = new FormData(form);

        console.group("ðŸ“¦ Form Submission");
        for (const [key, value] of formData.entries()) {
          if (value instanceof File) {
            console.log(key, {
              name: value.name,
              type: value.type,
              size: value.size,
            });
          } else {
            console.log(key, value);
          }
        }
        console.groupEnd();
      }

      form.addEventListener("submit", (e) => {
        // printFormData(e);
      });
    });
  </script>

  <body class="min-h-screen bg-slate-50 flex items-center justify-center p-4">
    <main class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-6 sm:p-8">
      <h1 class="text-2xl font-bold text-slate-900 mb-1">
        Fill out your company's information.
      </h1>
      <p class="text-slate-500 mb-6">
        Please provide details about your business. It's important for clients
        to know how to reach you.
      </p>
      <!-- client-form -->
      <!-- action="https://formspree.io/f/mjgwzyok" -->
      <form
        id="company-form"
        class="space-y-8"
        action="https://formspree.io/f/mjgwzyok"
        method="POST"
        enctype="multipart/form-data"
      >
        <!-- Company Name -->
        <div>
          <label class="block text-sm font-semibold text-slate-700 mb-1">
            Company Name
          </label>
          <input
            type="text"
            name="company_name"
            required
            class="w-full rounded-lg border border-slate-300 px-3 py-2 focus:ring-2 focus:ring-slate-900 focus:outline-none"
          />
        </div>

        <!-- Address -->
        <AddressLookup />

        <!-- Contact -->
        <fieldset class="space-y-4">
          <legend class="text-sm font-semibold text-slate-900">
            Company Contact
          </legend>

          <input
            type="tel"
            name="phone"
            placeholder="Phone Number"
            class="w-full rounded-lg border border-slate-300 px-3 py-2 focus:ring-2 focus:ring-slate-900 focus:outline-none"
          />

          <input
            type="email"
            name="email"
            placeholder="Email"
            class="w-full rounded-lg border border-slate-300 px-3 py-2 focus:ring-2 focus:ring-slate-900 focus:outline-none"
          />
        </fieldset>

        <!-- History -->
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">
            Company History
          </label>
          <textarea
            name="history"
            rows="6"
            placeholder=`Please tell us a little about the history of your company. This will help us build your "About Us" page.`
            class="w-full rounded-lg border border-slate-300 px-3 py-2 focus:ring-2 focus:ring-slate-900 focus:outline-none"
          ></textarea>
        </div>

        <!-- Services -->
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">
            Services Provided
          </label>
          <textarea
            name="services"
            rows="6"
            placeholder="Give us a quick list of what services your company provides. This will help us connect you with the right customers."
            class="w-full rounded-lg border border-slate-300 px-3 py-2 focus:ring-2 focus:ring-slate-900 focus:outline-none"
          ></textarea>
        </div>

        <!-- Photos -->
        <PhotoUpload />
        <!-- Colors -->
        <fieldset class="space-y-4">
          <legend class="text-sm font-semibold text-slate-900">
            Preferred Colors
          </legend>
          <p class="text-sm text-slate-500 mt-2">
            Please pick a couple colors that you'd like to use in your website.
            This will help us create a design to best match your brand.
          </p>

          <div class="flex items-center gap-4">
            <label class="text-sm text-slate-700 w-32"> Primary Color </label>
            <input
              type="color"
              name="primary_color"
              value="#0f172a"
              class="h-14 max-w-16 rounded-lg border border-slate-300 cursor-pointer"
            />
          </div>

          <div class="flex items-center gap-4">
            <label class="text-sm text-slate-700 w-32"> Secondary Color </label>
            <input
              type="color"
              name="secondary_color"
              value="#64748b"
              class="h-14 max-w-16 rounded-lg border border-slate-300 cursor-pointer"
            />
          </div>
        </fieldset>

        <!-- Submit -->
        <button
          type="submit"
          class="w-full rounded-xl bg-slate-900 text-white py-3 font-medium hover:bg-slate-800 transition hover:cursor-pointer"
        >
          Submit Company Info
        </button>
      </form>
    </main>
  </body>
</html>
