---
import Layout from "~/layouts/Layout.astro";
import { content } from "~/data/content";
import ContactForm from "~/components/ContactForm.astro";

const { address, phone, email } = content.company;
---

<Layout pageTitle="Contact">
  <section class="flex-1">
    <div class="mx-auto max-w-7xl px-6 py-16 lg:px-12">
      <div class="grid gap-16 lg:grid-cols-2 items-start">
        <!-- Left column -->
        <div>
          <h1 class="text-4xl font-extrabold lg:text-7xl">Send us a message</h1>

          <p class="mt-6 max-w-md text-lg text-gray-300">
            Fill out our contact form and be online <span class="font-bold"
              >tomorrow!</span
            >
          </p>

          <!-- Contact details -->
          <dl class="mt-12 space-y-6 text-gray-200">
            Address
            <div class="flex gap-4">
              <dt class="mt-1 text-theme_accents">ğŸ“</dt>
              <dd>
                {address.street}<br />
                {address.city}, {address.state}
                {address.zip}
              </dd>
            </div>

            <!-- Phone -->
            <div class="flex gap-4">
              <dt class="mt-1 text-theme_accents">ğŸ“</dt>
              <dd>
                <a
                  href={`tel:${phone}`}
                  class="hover:text-white transition-colors"
                >
                  {phone}
                </a>
              </dd>
            </div>

            <!-- Email -->
            <div class="flex gap-4">
              <dt class="mt-1 text-theme_accents">âœ‰ï¸</dt>
              <dd>
                <a
                  href={`mailto:${email}`}
                  class="hover:text-white transition-colors"
                >
                  {email}
                </a>
              </dd>
            </div>
          </dl>
        </div>

        <!-- Form -->
        <div class="w-full">
          <div
            class="rounded-2xl p-8 shadow-2x bg-gray-200 text-theme_text_dark"
          >
            <ContactForm />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
