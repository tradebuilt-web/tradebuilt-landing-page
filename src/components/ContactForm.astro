---
// action="https://formspree.io/f/xreqdeaq"
---

<form action="https://formspree.io/f/xreqdeaq" method="POST">
  <div class="flex flex-col gap-4">
    <div>
      <label for="name" class="block text-sm font-semibold">Name</label>
      <input type="text" name="name" id="name" autocomplete="name" />
    </div>

    <div>
      <label for="email" class="block text-sm font-semibold">Email</label>
      <input type="email" name="email" id="email" autocomplete="email" />
    </div>

    <div>
      <label for="phone-number" class="block text-sm font-semibold"
        >Phone number</label
      >
      <input
        type="tel"
        name="phone-number"
        id="phone-number"
        autocomplete="tel"
      />
    </div>

    <div>
      <label for="message" class="block text-sm font-semibold">Message</label>
      <div>
        <textarea
          name="message"
          placeholder="Tell us how we can help you"
          id="message"
          rows="4"></textarea>
      </div>
    </div>
  </div>
  <div class="mt-8 flex justify-end">
    <button
      type="submit"
      class="bg-theme_accents text-theme_text_dark hover:bg-theme_button_hover px-4 py-2 rounded-lg hover:cursor-pointer"
      >Send message</button
    >
  </div>

  <script>
    window.onbeforeunload = () => {
      for (const form of document.getElementsByTagName("form")) {
        form.reset();
      }
    };
  </script>
  <style>
    input,
    textarea {
      background: white;
    }
  </style>
</form>
